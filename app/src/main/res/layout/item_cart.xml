<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp"
    android:background="@drawable/rounded_background"
    >

    <ImageView
        android:id="@+id/cartItemImage"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded"
        android:clipToOutline="true"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/cartItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#50444c"
            android:fontFamily="@font/pbold"
            android:text="Nama Item"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/cartItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pbold"
            android:text="Rp 0"
            android:textSize="16sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/cartMinusButton"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:backgroundTint="#FAF2DE"
                android:textColor="#355F2E"
                android:text="-" />

            <TextView
                android:id="@+id/cartItemCount"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="1"
                android:textColor="#355F2E"
                android:textSize="20sp" />

            <Button
                android:id="@+id/cartPlusButton"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:backgroundTint="#FAF2DE"
                android:textColor="#355F2E"
                android:text="+" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/cartDeleteButton"
        android:layout_width="45dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bin"
        android:textSize="16sp" />
</LinearLayout>